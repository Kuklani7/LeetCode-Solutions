double myPow(double x, int n) {
    if(x==0){
        return 0;
    }
    long long power=n;
    if(power<0){
        x=1.0/x;
        power=-power;
    }
    double result=1;
    while(power>0){
        if(power%2==1){
            result*=x;
        }
        x=x*x;
        power/=2;
    }
    return result;
}
